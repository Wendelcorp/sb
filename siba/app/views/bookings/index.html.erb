<div class="width-control">
<p id="notice"><%= notice %></p>

<h3 class="bottom-50">Scheduled Bookings</h3>
<%= @booking_months.count %> Bookings This Month</p> <br>
<%= @booking_today.count %> Bookings Today</p> <br>


<table class="table">
  <col width="250">
  <col width="350">
  <col width="150">
  <col width="150">
  <thead>
    <tr>
      <th><%= sortable 'name' %></th>
      <th><%= sortable 'email' %></th>
      <th><%= sortable 'guests' %></th>
      <th><%= sortable 'start' %></th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.name %></td>
        <td><%= booking.email %></td>
        <td><%= booking.guests %></td>
        <td><%= booking.start_time %></td>

        <td>
        <%= link_to 'Show', booking %> <br>
        <%= link_to 'Edit', edit_booking_path(booking) %> <br>
        <%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Booking', new_booking_path %>
</div>
