<p id="notice"><%= notice %></p>

<h3 class="bottom-50">Scheduled Bookings</h3>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Date</th>
      <th>Guests</th>
      <th>Start time</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.name %></td>
        <td><%= booking.email %></td>
        <td><%= booking.phone %></td>
        <td><%= booking.date %></td>
        <td><%= booking.guests %></td>
        <td><%= booking.start_time %></td>

        <td>
        <%= link_to 'Show', booking %> <br>
        <%= link_to 'Edit', edit_booking_path(booking) %> <br>
        <%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Booking', new_booking_path %>
