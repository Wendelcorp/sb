<p id="notice"><%= notice %></p>

<h3 class="bottom-50">Scheduled Bookings</h3>
<p><%= @booking_weeks.first[1].count %> Bookings This Week |
<%= @booking_months.first[1].count %> Bookings This Month</p> <br>

<% @booking_days.keys.sort.each do |day| %>
<table class="table">
  <col width="250">
  <col width="350">
  <col width="150">
  <col width="150">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Guests</th>
      <th>Start time</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <h4><strong><%= day.strftime("%B %d, %Y") %></strong></h4>
      <% for booking in @booking_days[day] %>
      <tr>
        <td><%= booking.name %></td>
        <td><%= booking.email %></td>
        <td><%= booking.guests %></td>
        <td><%= booking.start_time.to_s(:time) %></td>

        <td>
        <%= link_to 'Show', booking %> <br>
        <%= link_to 'Edit', edit_booking_path(booking) %> <br>
        <%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>
<% end %>
<br>

<%= link_to 'New Booking', new_booking_path %>
