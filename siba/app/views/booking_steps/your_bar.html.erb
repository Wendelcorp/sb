<h1>Your Bar</h1>

<div class="field">
  <%= f.label :address %><br>
  <%= f.text_field :address %>
</div>

<div class="field">
  <%= f.label :guests, "Number of Guests" %><br>
  <%= f.text_field :guests %>
</div>

<div class="field">
  <%= f.label :start_time %><br>
  <%= f.time_select :start_time, {:minute_step => 30, :ampm => true} %>
</div>

<div class="field">
  <%= f.label :permit, "Do You Have a Permit?" %><br>
  <div class="col-xs-6 text-right">Yes I do</div><div class="col-xs-6"><%= f.check_box :permit, :class => "check-box" %></div>
</div>

<div class="field">
  <%= f.label :additional, "Additional Details" %><br>
  <%= f.text_area :additional, cols: "40", rows: "5" %>
</div>

<div class="actions">
  <%= f.submit %>
</div>
